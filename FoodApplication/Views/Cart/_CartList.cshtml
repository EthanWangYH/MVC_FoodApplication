@model  IEnumerable<FoodApplication.Models.Cart>;

@foreach (var cart in Model)
{
    <div class="border-bottom p-2 d-flex">
        <img src="@cart.Image_url" class="cartListImg"/>
        <a class="fw-bold text-dark text-decoration-none" href="/Recipe/Order?id=@cart.RecipeId">@(cart.Title!.Length>=15? cart.Title.Substring(0,14)+"...":cart.Title)</a>
    </div>
}   
<div class="p-2 text-center bg-black">
    <a href="/Cart" class="text-white fs-4 text-decoration-none">Go To Cart</a>
</div>